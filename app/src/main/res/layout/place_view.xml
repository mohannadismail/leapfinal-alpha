<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoAnchorPoint="0.7"
    app:umanoPanelHeight="0dp"
    app:umanoShadowHeight="@dimen/margin_8">

    <include
        layout="@layout/leap_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/margin16"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/placeimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16"
            android:adjustViewBounds="true"
            android:contentDescription="@string/place_image"
            android:scaleType="centerCrop"
            android:elevation="@dimen/elev1"
            android:src="@drawable/kfclogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/rect"
            android:elevation="@dimen/elev1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:text="@string/place_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/elev1"
                android:layout_margin="@dimen/margin_8"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/placecategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:text="@string/place_category"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/placeaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:text="@string/place_address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/placedesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin16"
                android:text="@string/place_details"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text16" />

        </LinearLayout>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
