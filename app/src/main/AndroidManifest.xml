<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leap_app.leap" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".LeapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <!--<meta-data-->
            <!--android:name="com.google.android.geo.API_KEY"-->
            <!--android:value="AIzaSyCdMM7Xk16FNW_7-NBsdrd60UdAYT79ZSM" />-->
         <meta-data
         android:name="com.google.android.geo.API_KEY"
         android:value="AIzaSyB2o53Kwa9ZJap4XTumjWLBMzH9MoxbrRo" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".UI.LeapInfoActivity"
            android:label="@string/title_activity_leap_view"
            android:parentActivityName=".UI.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.MainActivity" />
        </activity>
        <activity android:name=".UI.Place" >
        </activity>
        <activity
            android:name=".UI.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".UI.LoginActivity"
            android:parentActivityName=".UI.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.SignupActivity"
            android:parentActivityName=".UI.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.CirclesActivity"
            android:parentActivityName=".UI.MainActivity"
            android:label="@string/circles">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.addCircle"
            android:parentActivityName=".UI.CirclesActivity"
            android:label="@string/circleName">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.CirclesActivity" />

        </activity>
        <activity
            android:name=".UI.CircleDetails"
            android:parentActivityName=".UI.CirclesActivity"
            android:label="@string/circleName">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leap_app.leap.UI.CirclesActivity" />

        </activity>


        <provider
            android:name="com.leap_app.leap.LeapProvider.LeapProvider"
            android:authorities="com.leap_app.leap"
            android:enabled="true"
            android:exported="true" />
    </application>


</manifest>